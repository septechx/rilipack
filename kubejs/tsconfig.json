{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "sourceMap": false,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
